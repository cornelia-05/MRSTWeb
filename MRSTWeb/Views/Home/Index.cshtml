@{
     Layout = ViewBag.Layout ?? "~/Views/Shared/_Layout.cshtml";
}

<section class="slick-slideshow">
     <div class="slick-custom">
          <img src="~/Content/images/Start page 1.png" class="img-fluid" alt="">

          <div class="slick-bottom">
               <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-10">
                            <h1 class="slick-title">Cool Fashion</h1>

                            <p class="lead text-white mt-lg-3 mb-lg-5">We build your dreams</p>

                            <a class="nav-link btn custom-btn" href="@Url.Action("About", "Home")" >About us</a>

                        </div>
                    </div>
               </div>
          </div>
     </div>

     <div class="slick-custom">
          <img src="~/Content/images/start page 3.jpg" class="img-fluid" alt="">

          <div class="slick-bottom">
               <div class="container">
                    <div class="row">
                         <div class="col-lg-6 col-10">
                              <h1 class="slick-title">New Design</h1>

                              <p class="lead text-white mt-lg-3 mb-lg-5">Inovative design, you will be the coolest</p>

                              <a href="products.html" class="btn custom-btn">Explore Products</a>
                         </div>
                    </div>
               </div>
          </div>
     </div>

</section>

<section class="featured-product">
     <div class="container">
          <div class="row">

               <div class="col-12 text-center">
                    <h2 class="mb-5">Products</h2>
               </div>

               <div class="col-lg-4 col-12 mb-3">
