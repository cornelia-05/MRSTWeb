@{
     Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<header class="site-header section-padding-img site-header-image">
     <div class="container">
          <div class="row">

               <div class="col-lg-6 col-12 header-info">
                    <h1>
                         <span class="d-block text-primary">Find</span>
                         <span class="d-block text-dark">Your Comfort</span>
                    </h1>
               </div>
          </div>
     </div>

     <img src="~/Content/images/header/businesspeople-meeting-office-working.jpg" class="header-image img-fluid" alt="">
</header>

<section class="team section-padding">
     <div class="container text-center">
          <div class="row justify-content-center">

               <div class="col-12">
                    <h2 class="mb-5">Our <span>Team</span></h2>
               </div>

               <div class="col-lg-4 mb-4 col-12">
                    <div class="team-thumb d-flex align-items-center">
                         <img src="~/Content/images/liliana.jpg" class="img-fluid custom-circle-image team-image me-4" alt="">

                         <div class="team-info">
                              <h5 class="mb-0">Lilly</h5>
                              <strong class="text-muted">Dev, Admin</strong>

                         </div>
                    </div>
               </div>

               <div class="col-lg-4 mb-4 col-12">
                    <div class="team-thumb d-flex align-items-center">
                         <img src="~/Content/images/cornelia.jpg" class="img-fluid custom-circle-image team-image me-4" alt="">

                         <div class="team-info">
                              <h5 class="mb-0">Nelly</h5>
                              <strong class="text-muted">Dev, Admin</strong>

                         </div>
                    </div>
               </div>



          </div>
     </div>
</section>

<section class="testimonial section-padding">
     <div class="container">
          <div class="row">

               <div class="col-lg-9 mx-auto col-11">
                    <h2 class="text-center">Your trust, <br> <span>Our</span> priority</h2>

                    <div class="slick-testimonial-caption">
                         <p class="lead">Every project is a new life, a life that we want you to create with us. We have the best solutions for you and your dreams.</p>

                         <div class="slick-testimonial-client d-flex align-items-center mt-4">

                              <span>David, <strong class="text-muted">Interior designer</strong></span>
                         </div>
                    </div>

                    <div class="slick-testimonial-caption">
                         <p class="lead">In every project we put a little bit from our hearts, and in 5 years we already have done a bit over 500 projects. This shows all of our deidcation and strength.</p>

                         <div class="slick-testimonial-client d-flex align-items-center mt-4">

                              <span>Andrei, <strong class="text-muted">Project manager</strong></span>
                         </div>
                    </div>


               </div>
          </div>

     </div>
</section>